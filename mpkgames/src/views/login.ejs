<%- include("./partials/head") %> 

<%- include("./partials/header") %> 


    <div class="formularioIngresa">
        <div class="container">
            <div class="row">
                <form class="FormLogin col-12 col-md-8 col-lg-8" action="/users/login" method="POST">
                    <div class="row"> 
                        <div class="col-12 Registro">     
                            <div class="col-12">
                                <h3>Ingresar</h3>
                            </div>   
                        </div>
                    </div>  
                    <div class="form-group col-12 col-md-12 col-lg-12">            
                        <label form="usu_email">email:</label> 
                        <input type="text" id="usu_email" name="usu_email" class="form-control <%= (typeof old != 'undefined' && old.usu_email && !errors.usu_email)?"is-valid":(typeof errors != 'undefined' && errors.usu_email)?"is-invalid": ""  %>" value="<%= (typeof old != 'undefined' && old.usu_email)?old.usu_email:'' %>"  placeholder="Ingrese su email" />             
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.usu_email)?errors.usu_email.msg: "" %> </small>
                    </div>                    

                    <div class="form-group col-12 col-md-12 col-lg-12">    
                        <label form="usu_password">Ingrese una Contraseña</label> 
                        <input type="password" placeholder="Ingrese una Contraseña" class="form-control <%= (typeof old != 'undefined' && old.usu_password && !errors.usu_password)?"is-valid":(typeof errors != 'undefined' && errors.usu_password)?"is-invalid": ""  %>" name="usu_password" id="usu_password" >
                        <small class="text-danger"><%= (typeof errors != 'undefined' && errors.usu_password)?errors.usu_password.msg: "" %> </small>  
                       <%  /*  <p>
                            <input type="submit" value="Ingresar" class="botonesRegistrarse"/> 
                        </p> */ %> 
                    </div> 
                    
                    <div class="divCheck custom-control custom-checkbox col-12 col-md-12 col-lg-12">
                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                        <label class="clasLabel custom-control-label" for="customCheck1">Recordarme</label>
                      </div>
                    <div class="form-group col-12 col-md-12 col-lg-12">
                    
                        <button class="btnDetalle btn btn-primary" type="submit">
                            Ingresar
                        </button>
                        </div>   
                    
                </form>
            </div>
        </div>
    </div>
   
   
