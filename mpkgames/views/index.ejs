<main>
   <!--****** SECCIONES: PRODUCTOS ****** -->    
    <div class="container py-5"> <!--caja contendedora de bootstrap con padding superior e inferior de 5 (escala de boostrap)-->        
        <section> <!--SECCIÓN: PRODUCTOS Utimos Juegos -->            
            <div class="row productos"> <!--caja que contiene todos los productos de la ultima visita-->                
                <div class="titulo col-12"> <!--caja que contiene el titulo de la sección-->
                    <h2>
                        Ofertas en los Utimos Juegos 
                    </h2>
                </div>
              <!--recorro los productos basados en la ultima visita con un forEach-->
              <% OfertasUtimosJuegos.forEach(producto => { %>
                <!--caja de la grilla de bootstrap-->
                <div class="col-12 col-md-6 col-lg-3">
                    <!--caja que muestra la información del producto-->
                    <div class="contenido">
                        <!--ETIQUETA SEMANTICA-->
                        <figure>
                            <a href="/productos/detalle/<%= producto.IDJuego %> ">
                                <img src="/images/products/<%- producto.Imagen %>  " alt=" ">
                            </a>
                        </figure>
                            <!--informacion-->
                            <article class="classArtIndex">
                                <!--precio-->
                                <h2>$
                                    <%- producto.Precio %>
                                </h2>
                                <h2>$
                                    <%- (producto.Precio -producto.Precio * producto.Descuento /100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %>
                                </h2>
                                
                                <!--descuento-->
                                <% if (producto.Descuento !=0) { %>
                                    <span><%- producto.Descuento %> % OFF</span>
                                <% } %>                           
                               <!--nombre del producto ??-->
                               <p>
                                    <%- producto.NombreDeProducto %>
                                </p>                        
                                   <!--icono de Consolas-->
                                   <i class="fab fa-xbox Xbox"></i>
                                   <i class="fab fa-playstation playStation"></i>
                                <button type="button" class="btn btn-primary btn-sm btnAgregarCarrito">Agregar al Carrito</button>
                            </article> 
                        <!--finaliza contenido-->
                    </div>
                    <!--finaliza caja de grilla de boostrap-->
                </div>
                <!--finaliza el div.row-->
                <% }) %>
            </div>

            <!--FINALIZA SECCIÓN ULTIMOS JUEGOS OFERTAS-->
        </section>
        <section> <!--SECCIÓN: PRODUCTOS Utimos Juegos -->            
            <div class="row productos"> <!--caja que contiene todos los productos de la ultima visita-->                
                <div class="titulo col-12"> <!--caja que contiene el titulo de la sección-->
                    <h2>
                        Ofertas de la Semana 
                    </h2>
                </div>
              <!--recorro los productos basados en la ultima visita con un forEach-->
              <% OfertasDeLaSemana.forEach(producto => { %>
                <!--caja de la grilla de bootstrap-->
                <div class="col-12 col-md-6 col-lg-3">
