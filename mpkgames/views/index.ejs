                    <div class="contenido">
                        <!--ETIQUETA SEMANTICA --*-->
                        <figure>
                            <a href="/productos/detalle/<%= producto.IDJuego %> ">
                                <img src="/images/products/<%- producto.Imagen %>  " alt=" ">
                            </a>
                        </figure>
                            <!--informacion-->
                            <article class="classArtIndex">
                                <!--precio-->
                                <h2>$
                                    <%- producto.Precio %>
                                </h2>
                                <h2>$
                                    <%- (producto.Precio -producto.Precio * producto.Descuento /100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %>
                                </h2>
                                
                                <!--descuento-->
                                <% if (producto.Descuento !=0) { %>
                                    <span><%- producto.Descuento %> % OFF</span>
                                <% } %>                           
                               
                                <!--nombre del producto ??-->
                                <div>
                                <p>
                                    <%- producto.NombreDeProducto %>
                                </p>                        
                                </div>
                                   <!--icono de Consolas-->
                                   <i class="fab fa-xbox Xbox"></i>
                                   <i class="fab fa-playstation playStation"></i>
                                <button type="button" class="btn btn-primary btn-sm btnAgregarCarrito">Agregar al Carrito</button>
                            </article> 
                        <!--finaliza contenido-->
                    </div>
                    <!--finaliza caja de grilla de boostrap-->
                </div>
                <!--finaliza el div.row-->
                <% }) %>
            </div>

            <!--FINALIZA SECCIÓN ULTIMOS JUEGOS OFERTAS-->
        </section>
    </div>




    <section class="container-fluid">
        <!--caja con el contenido principal de footer-->
        <div class="row">
            <!--contiene pago con tarjeta-->
            <div class="col-12 col-lg-4">
                <article class="classArtIndex">
